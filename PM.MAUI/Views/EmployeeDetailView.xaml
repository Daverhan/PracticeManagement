<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM.MAUI.Views.EmployeeDetailView"
             Title="EmployeeDetailView"
             NavigatedFrom="OnLeaving"
             NavigatedTo="OnArriving">

    <Shell.TitleView>
        <Grid>
            <Label Text="Employee View" FontSize="Large" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"></Label>
        </Grid>
    </Shell.TitleView>

    <VerticalStackLayout>
        <Label Text="Name" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Entry Text="{Binding Path=Name, Mode=TwoWay}" ClearButtonVisibility="WhileEditing"></Entry>
        <Label></Label>

        <Label Text="Rate" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Entry Text="{Binding Path=Rate, Mode=TwoWay}" ClearButtonVisibility="WhileEditing"></Entry>

        <Button Text="Confirm" Clicked="ConfirmClick"/>
        <Button Text="Cancel" Clicked="CancelClick"/>
    </VerticalStackLayout>
    
</ContentPage>